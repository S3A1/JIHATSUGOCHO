<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Disp08">

    <Button
            android:id="@+id/btnCancel"
            android:layout_width="200dp"
            android:layout_height="75dp"
            android:onClick="tap_btnCancel"
            android:text="@string/btnCancel" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    <Button
            android:id="@+id/btnAdd"
            android:layout_width="200dp"
            android:layout_height="75dp"
            android:onClick="tap_btnAdd"
            android:text="@string/btnAdd" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <EditText
            android:id="@+id/strQuestion"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp" android:ems="10"
            android:hint="問題文を入力してください"
            android:inputType="textMultiLine|textPersonName"
            android:lines="3"
            android:maxLength="60"
            android:maxLines="3"
            app:layout_constraintBottom_toTopOf="@+id/strAnswer" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.55"/>
    <EditText
            android:id="@+id/strAnswer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp" android:ems="10" android:hint="解答文を入力してください"
            android:inputType="textMultiLine|textPersonName"
            android:lines="3"
            android:maxLength="60"
            android:maxLines="3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>